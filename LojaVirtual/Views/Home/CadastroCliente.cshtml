@model Cliente
@{
    ViewData["Title"] = "Cadastro de Cliente";
}
<form asp-action=""
<main role="main">
    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6">
                <h3 class="subtitle-doc">
                    Cadastro Cliente
                </h3>
                <div id="code_register_1">
                    <div class="card">
                        <header class="card-header">
                            <a href="" asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                            <h4 class="card-title mt-2">Sign up</h4>
                        </header>
                        <article class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                    </div>
                                    <div class="col form-group">
                                        <label>Nascimento</label>
                                        <input type="text" asp-for="Nascimento" class="form-control" placeholder="">
                                    </div>
                                    <div class="col form-group">
                                        <label>CPF</label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                    </div>
                                    <div class="col form-group">
                                        <label>Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option1">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option2">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                </div>
            
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="">
                                    <small class="form-text text-muted">
                                        We'll never share your email with anyone
                                        else.
                                    </small>
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input class="form-control" asp-for="Senha" type="password">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>
                            </form>
                        </article> 
                        <div class="border-top card-body text-center">Já tem uma conta? <a href="">Entrar</a></div>
                    </div> 
                </div> 
            </aside>
        </div>
    </section>
</main>

