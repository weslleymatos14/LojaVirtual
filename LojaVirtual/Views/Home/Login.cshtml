
@{
    ViewData["Title"] = "Login";
}

<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4 offset-4">
            <div id="code_login_1">
                <div class="card">

                    <div class="card">
                        <header class="card-header">
                            <a href="/Home/CadastroCliente" class="float-right btn btn-outline-primary">Cadastrar</a>
                            <h4 class="card-title mb-4 mt-1">@ViewData["Title"]</h4>
                        </header>
                    </div>
                    <article class="card-body">
                        <form>
                            @if (TempData["MSG_S"] != null)
                            {
                                <p class="alert alert-success">@Html.Raw(TempData["MSG_S"])</p>
                            }
                            <div class="form-group">
                                <label>Email</label>
                                <input name="" class="form-control" placeholder="Email" type="email">
                            </div>
                            <div class="form-group">
                                <a class="float-right" href="#">Esqueci a senha</a>
                                <label>Senha</label>
                                <input class="form-control" placeholder="******" type="password">
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label> <input type="checkbox"> Salvar senha </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Entrar </button>
                            </div>
                        </form>
                    </article>
                </div> 
            </div> 
        </aside>
    </section>
</main>