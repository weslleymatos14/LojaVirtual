@model Produto

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Cadastrar" asp-controller="Produto" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="@ViewBag.Categorias">
                        <option value="">Principal</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <div class="input-group-prepend">
                        <div class="input-group-text">Un</div>
                        <input asp-for="Quantidade" class="form-control" />
                    </div>
                    <span asp-validation-for="Quantidade" type="number" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Valor" class="control-label"></label>
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                        <input asp-for="Valor" class="form-control money" />
                    </div>
                    <span asp-validation-for="Valor" typeof="number" class="text-danger"></span>
                </div>
            </div>

            <h4>Frete</h4>
            <hr />
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="Peso" class="control-label"></label>
                    <div class="input-group-prepend">
                        <div class="input-group-text">Kg</div>
                        <input asp-for="Peso" class="form-control" />
                    </div>
                    <span asp-validation-for="Peso" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Largura" class="control-label"></label>
                    <div class="input-group-prepend">
                        <div class="input-group-text">Cm</div>
                        <input asp-for="Largura" type="number" class="form-control" />
                    </div>
                    <span asp-validation-for="Largura" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Altura" class="control-label"></label>
                    <div class="input-group-prepend">
                        <div class="input-group-text">Cm</div>
                        <input asp-for="Altura" type="number" class="form-control" />
                    </div>
                    <span asp-validation-for="Altura" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Comprimento" class="control-label"></label>
                    <div class="input-group-prepend">
                        <div class="input-group-text">Cm</div>
                        <input asp-for="Comprimento" type="number" class="form-control" />
                    </div>
                    <span asp-validation-for="Comprimento" class="text-danger"></span>
                </div>
            </div>
            <hr />
            @{
                List<Imagem> Imagens = new List<Imagem>();
                if (Model != null)
                {
                    Imagens = Model.Imagens.ToList();
                }
            }
            <div class="row Imagens">
                @for (int i = 0; i < 12; i++)
                {
                    @if (Imagens.ElementAtOrDefault(i) != null)
                    {
                        <div class="col-md-2">
                            <input type="file" class="input-file" />
                            <img src="@Imagens.ElementAtOrDefault(i).Caminho" class="img-thumbnail img-upload" />
                            <div class="btn btn-danger btn-imagem-excluir">X</div>
                            <input type="text" name="Imagem" value="@Imagens.ElementAtOrDefault(i).Caminho" />
                        </div>
                    }
                    else
                    {
                        <div class="col-md-2">
                            <input type="file" class="input-file" />
                            <img src="~/img/imagem-padrao.png" class="img-thumbnail img-upload" />
                            <div class="btn btn-danger btn-imagem-excluir btn-ocultar">X</div>
                            <input type="text" name="Imagem" />
                        </div>
                    }
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" asp-controller="Produto">Voltar</a>
</div>

