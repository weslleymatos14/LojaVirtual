@model X.PagedList.IPagedList<Categoria>

@{
    ViewData["Title"] = "Categorias";
}
<br />
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Cadastrar" asp-controller="Categoria">Criar nova categoria</a>
</p>

@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        Código
                    </td>
                    <td>
                        Nome
                    </td>
                    <td>
                        Categoria Pai
                    </td>
                    <td>
                        Ações
                    </td>
                </tr>
            </tbody>

            <tbody>
                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>
                            @categoria.Id
                        </td>
                        <td>
                            @categoria.Nome
                        </td>
                        <td>
                            @Html.DisplayFor(x => categoria.CategoriaPai.Nome)
                        </td>
                        <td>
                            <a asp-action="Atualizar" asp-route-id="@categoria.Id">Atualizar</a> |
                            <a asp-action="Detalhes" asp-route-id="@categoria.Id">Detalhes</a> |
                            <a asp-action="Excluir" asp-route-id="@categoria.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))
}
else
{
    <span>Nenhum registro cadastrado!</span>
}