@model X.PagedList.IPagedList<LojaVirtual.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}
<br />
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-controller="Categoria">Criar nova categoria</a>
</p>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        Código
                    </td>
                    <td>
                        Nome
                    </td>
                    <td>
                        Slug
                    </td>
                    <td>
                        Categoria Pai
                    </td>
                    <td>
                        Ações
                    </td>
                </tr>
            </tbody>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            @item.Slug
                        </td>
                        <td>
                            @item.CategoriaPaiId
                        </td>
                        <td>
                            <a asp-action="Atualizar" asp-route-id="@item.Id">Atualizar</a> |
                            <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a> |
                            <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))
}
else
{
    <span>Nenhum registro cadastrado!</span>
}