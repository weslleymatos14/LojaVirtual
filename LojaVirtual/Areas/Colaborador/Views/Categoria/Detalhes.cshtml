@model LojaVirtual.Models.Categoria

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Código:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Slug:
        </dt>
        <dd class="col-sm-10">
            @Model.Slug
        </dd>
        <dt class="col-sm-2">
            Categoria pai:
        </dt>
        <dd class="col-sm-10">
            @Model.CategoriaPaiId
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Atualizar" asp-controller="Categoria" asp-route-id="@Model.Id">Atualizar</a> |
    <a asp-action="Index" asp-controller="Categoria">Voltar</a>
</div>
