@model X.PagedList.IPagedList<Cliente>

@{
    ViewData["Title"] = "Clientes";
}
<br />
<h2>@ViewData["Title"]</h2>


@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <label asp-for="@Model.First().Id" class="control-label"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.First().Nome" class="control-label"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.First().Nascimento" class="control-label"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.First().Telefone" class="control-label"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.First().Sexo" class="control-label"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.First().CPF" class="control-label"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.First().Email" class="control-label"></label>
                    </td>
                    <td>
                        Ações
                    </td>
                </tr>
            </tbody>

            <tbody>
                @foreach (var cliente in Model)
                {
                <tr>
                    <td>
                        @cliente.Id
                    </td>
                    <td>
                        @cliente.Nome
                    </td>
                    <td>
                        @cliente.Nascimento
                    </td>
                    <td>
                        @cliente.Telefone
                    </td>
                    <td>
                        @cliente.Sexo
                    </td>
                    <td>
                        @cliente.CPF
                    </td>
                    <td>
                        @cliente.Email
                    </td>
                    @if (cliente.Situacao == "Ativo")
                    {
                        <td>
                            <a asp-action="AtivarDesativar" asp-route-id="@cliente.Id">Desativar</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-action="AtivarDesativar" asp-route-id="@cliente.Id">Ativar</a>
                        </td>
                    }
                </tr>
                }
            </tbody>

        </table>
    </div>
    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))
}
else
{
    <span>Nenhum registro cadastrado!</span>
}